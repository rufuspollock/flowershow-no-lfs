{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"]
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["**/*.js", "**/*.ts"]
}
