{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "target": "es2020",
    "module": "es2020",
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["jest.config.ts", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
