{
  "name": "template-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/template-e2e/src",
  "projectType": "library",
  "targets": {
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "src/support/testsetup.sh ../template \"$(pwd)\"/src/fixtures/content \"$(pwd)\"/src/fixtures/components",
          "npm run dev --prefix ../template -- -p 3030 &",
          "playwright test",
          "src/support/testteardown.sh ../template \"$(pwd)\"/../../site/content \"$(pwd)\"/../../site/components"
        ],
        "parallel": false,
        "cwd": "packages/template-e2e"
      },
      "dependsOn": ["^build"]
    },
    "e2e:setup": {
      "executor": "nx:run-commands",
      "options": {
        "command": "src/support/testsetup.sh ../template \"$(pwd)\"/src/fixtures/content \"$(pwd)\"/src/fixtures/components",
        "cwd": "packages/template-e2e"
      }
    },
    "e2e:teardown": {
      "executor": "nx:run-commands",
      "options": {
        "command": "src/support/testteardown.sh ../template \"$(pwd)\"/../../site/content \"$(pwd)\"/../../site/components",
        "cwd": "packages/template-e2e"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/template-e2e/**/*.js"]
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["template"]
}
